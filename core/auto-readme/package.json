{
	"name": "@stephansama/auto-readme",
	"version": "0.1.1",
	"description": "Generate lists and tables for your README automagically based on your repository and comments",
	"repository": {
		"url": "https://github.com/stephansama/packages",
		"type": "git",
		"directory": "packages/auto-readme"
	},
	"homepage": "https://packages.stephansama.info/api/@stephansama/auto-readme",
	"author": {
		"email": "stephanrandle.dev@gmail.com",
		"name": "Stephan Randle",
		"url": "https://stephansama.info"
	},
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "node --watch-path=./src build.mjs",
		"lint": "eslint ./src/ --pass-on-no-patterns --no-error-on-unmatched-pattern",
		"build": "node build.mjs && attw --pack . --exclude-entrypoints schema.yaml schema.json"
	},
	"bin": "./cli.mjs",
	"main": "./config/schema.js",
	"types": "./config/schema.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./config/schema.d.ts",
				"default": "./config/schema.js"
			},
			"require": {
				"types": "./config/schema.d.cts",
				"default": "./config/schema.cjs"
			}
		},
		"./schema.json": "./config/schema.json",
		"./schema.yaml": "./config/schema.yaml"
	},
	"files": [
		"./dist",
		"./config",
		"./cli.mjs"
	],
	"packageManager": "pnpm@10.11.0",
	"keywords": [
		"auto",
		"auto-readme",
		"cli",
		"generate",
		"generator",
		"list",
		"markdown",
		"table"
	],
	"dependencies": {
		"@iarna/toml": "^2.2.5",
		"@manypkg/get-packages": "^3.1.0",
		"chalk": "^5.5.0",
		"cosmiconfig": "^9.0.0",
		"deepmerge": "^4.3.1",
		"fast-glob": "^3.3.3",
		"handlebars": "catalog:",
		"markdown-table": "^3.0.4",
		"mdast-util-from-markdown": "^2.0.2",
		"mdast-util-gfm": "^3.1.0",
		"mdast-zone": "^6.1.0",
		"ora": "^8.2.0",
		"pkg-types": "^2.2.0",
		"remark": "^15.0.1",
		"remark-collapse": "^0.1.2",
		"remark-toc": "^9.0.0",
		"remark-usage": "^11.0.1",
		"yaml": "^2.8.1",
		"yargs": "^18.0.0",
		"zod": "catalog:",
		"zod2md": "^0.2.4"
	},
	"devDependencies": {
		"@types/mdast": "^4.0.4",
		"@types/yargs": "^17.0.33",
		"mdast": "^3.0.0",
		"tsup": "catalog:",
		"unified": "^11.0.5"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
