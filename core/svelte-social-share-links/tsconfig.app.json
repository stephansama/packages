{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"types": ["svelte", "vite/client"],
		"allowJs": true,
		"checkJs": true,
		"moduleDetection": "force",
		"composite": true
	},
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
