{
	"private": true,
	"name": "root",
	"version": "1.0.0",
	"homepage": "https://packages.stephansama.info/",
	"author": {
		"email": "stephanrandle.dev@gmail.com",
		"name": "Stephan Randle",
		"url": "https://stephansama.info"
	},
	"license": "MIT",
	"type": "module",
	"scripts": {
		"with-env": "dotenv -e .env --",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"test": "turbo test",
		"test:ci": "vitest --run --coverage --reporter=junit --outputFile=test-report.junit.xml",
		"test:ui": "vitest --ui",
		"publish": "changeset publish",
		"version": "changeset version && pnpm install --lockfile-only",
		"build": "pnpm run --sequential \"/^build:.*/\"",
		"build:packages": "turbo build --filter=./core/*",
		"build:examples": "turbo build --filter=./examples/*",
		"build:www": "turbo build --filter=www",
		"fmt:check": "prettier . --check",
		"fmt:write": "prettier . --write",
		"prepare": "husky"
	},
	"packageManager": "pnpm@10.11.0",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@changesets/cli": "^2.29.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/types": "^19.8.1",
		"@eslint/js": "^9.28.0",
		"@stephansama/auto-readme": "workspace:*",
		"@tsconfig/recommended": "^1.0.8",
		"@turbo/gen": "^2.5.4",
		"@types/node": "^24.3.0",
		"@typescript-eslint/parser": "^8.34.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.29.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-perfectionist": "^4.14.0",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"pkg-pr-new": "^0.0.51",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-astro-organize-imports": "^0.4.11",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-sort-package-json": "^1.1.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"turbo": "^2.5.4",
		"typescript": "catalog:",
		"typescript-eslint": "^8.34.0",
		"vitest": "catalog:",
		"wrangler": "^4.20.0"
	}
}
