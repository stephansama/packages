<?xml version="1.0" encoding="utf-8"?>
<!--
{{comment}}
--><xsl:stylesheet version="3.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output encoding="UTF-8" indent="yes" method="html" version="1.0"></xsl:output>
  <xsl:template match="/">
    <html lang="en" xmlns="http://www.w3.org/1999/xhtml">
      <head>
        <title><xsl:value-of select="/rss/channel/title"></xsl:value-of> Web Feed</title>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type"></meta>
        <link href="/icon/favicon.ico" rel="icon" type="image/x-icon"></link>
        <link href="/icon/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png"></link>
        <link href="/icon/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png"></link>
        <link href="/icon/android-chrome-192x192.png" rel="icon" sizes="192x192" type="image/png"></link>
        <link href="/icon/android-chrome-512x512.png" rel="icon" sizes="512x512" type="image/png"></link>
        <link href="/icon/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" type="image/png"></link>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport"></meta>
		<style type="text/css">{{style}}</style>
      </head>
      <body>
        <nav class="container-md px-3 py-2 mt-2 mt-md-5 mb-5 markdown-body">
          <p class="bg-yellow-light ml-n1 px-1 py-1 mb-1 text-black"><strong>This is a web feed,</strong> also known as an RSS feed. <strong>Subscribe</strong> by copying the URL from the address bar into your newsreader.</p>
          <p class="text-gray">Visit <a href="https://aboutfeeds.com">About Feeds</a> to get started with newsreaders and subscribing. It’s free.</p>
        </nav>
        <div class="container-md px-3 py-3 markdown-body">
          <header class="py-5">
            <h1 class="border-0"><!-- https://commons.wikimedia.org/wiki/File:Feed-icon.svg --><svg class="pr-1" id="RSSicon" style="vertical-align: text-bottom; width: 1.2em; height: 1.2em;" version="1.1" viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
                <defs>
                  <linearGradient id="RSSg" x1="0.085" x2="0.915" y1="0.085" y2="0.915">
                    <stop offset="0.0" stop-color="#E3702D"></stop>
                    <stop offset="0.1071" stop-color="#EA7D31"></stop>
                    <stop offset="0.3503" stop-color="#F69537"></stop>
                    <stop offset="0.5" stop-color="#FB9E3A"></stop>
                    <stop offset="0.7016" stop-color="#EA7C31"></stop>
                    <stop offset="0.8866" stop-color="#DE642B"></stop>
                    <stop offset="1.0" stop-color="#D95B29"></stop>
                  </linearGradient>
                </defs>
                <rect fill="#CC5D15" height="256" rx="55" ry="55" width="256" x="0" y="0"></rect>
                <rect fill="#F49C52" height="246" rx="50" ry="50" width="246" x="5" y="5"></rect>
                <rect fill="url(#RSSg)" height="236" rx="47" ry="47" width="236" x="10" y="10"></rect>
                <circle cx="68" cy="189" fill="#FFF" r="24"></circle>
                <path d="M160 213h-34a82 82 0 0 0 -82 -82v-34a116 116 0 0 1 116 116z" fill="#FFF"></path>
                <path d="M184 213A140 140 0 0 0 44 73 V 38a175 175 0 0 1 175 175z" fill="#FFF"></path>
              </svg> Web Feed Preview</h1>
            <h2>
              <xsl:value-of select="/rss/channel/title"></xsl:value-of>
            </h2>
            <p>
              <xsl:value-of select="/rss/channel/description"></xsl:value-of>
            </p>
            <a class="head_link" target="_blank"><xsl:attribute name="href">
                <xsl:value-of select="/rss/channel/link"></xsl:value-of>
              </xsl:attribute> Visit Website →</a>
          </header>
          <h2>Recent Items</h2>
          <xsl:for-each select="/rss/channel/item">
            <div class="pb-5">
              <h3 class="mb-0">
                <a target="_blank">
                  <xsl:attribute name="href">
                    <xsl:value-of select="link"></xsl:value-of>
                  </xsl:attribute>
                  <xsl:value-of select="title"></xsl:value-of>
                </a>
              </h3>
              <small class="text-gray">Published: <xsl:value-of select="pubDate"></xsl:value-of></small>
            </div>
          </xsl:for-each>
        </div>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
